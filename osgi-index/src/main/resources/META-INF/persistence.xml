<?xml version="1.0" encoding="UTF-8"?>
<!-- ignore: openjpa.TransactionMode -->
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="MavenBundles" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.criticollab.osgi.mavenindex.dto.BundleDTO</class>
        <class>com.criticollab.osgi.mavenindex.dto.BundleexportpackageDTO</class>
        <class>com.criticollab.osgi.mavenindex.dto.MavenartifactDTO</class>
        <class>com.criticollab.osgi.mavenindex.dto.MavenartifactversionDTO</class>
        <class>com.criticollab.osgi.mavenindex.dto.MavenresourceDTO</class>
        <class>com.criticollab.osgi.mavenindex.dto.MavenArtifactidDTO</class>
        <class>com.criticollab.osgi.mavenindex.dto.MavenClassifierDTO</class>
        <class>com.criticollab.osgi.mavenindex.dto.MavenGroupDTO</class>
        <class>com.criticollab.osgi.mavenindex.dto.PackageDTO</class>
        <properties>

            <property name="hibernate.connection.url"
                      value="jdbc:postgresql://localhost:5432/ses"/>
            <property name="hibernate.connection.username" value="ses"/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/>
        </properties>
    </persistence-unit>
</persistence>
